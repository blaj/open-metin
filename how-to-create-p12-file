1. Generate self-signed certificate
keytool -genkeypair \
    -alias <alias> \
    -keyalg RSA \
    -keysize 2048 \
    -storetype JKS \
    -keystore keystore.jks \
    -validity 365 \
    -dname "CN=localhost, OU=Development, O=OpenMetin, L=Warsaw, ST=Mazovia, C=PL"

2. Export public cert from PKCS12
keytool -exportcert -alias <alias> -keystore keystore.p12 -storetype PKCS12 -file server-cert.crt

3. Import .crt to JKS
keytool -importcert -alias <alias> -file server-cert.crt -keystore truststore.jks -storetype JKS